<h1>Edit <%= @task.title %> </h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "task title" %>

  <%= f.label :details %>
  <%= f.text_field :details, placeholder: "task description" %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>
